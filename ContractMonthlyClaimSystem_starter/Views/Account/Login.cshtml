@model LoginViewModel

@{
    // Specify that this view uses the shared layout page
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="center-card">
    <!-- Page Title -->
    <h1>Contract Monthly Claim System</h1>

    <!-- Subheading guiding the user to log in -->
    <p class="subtext">Sign in to your account to continue</p>

    <!-- Login form: sends POST request to the Login action -->
    <form method="post" asp-action="Login">
        <!-- Email field -->
        <label>Email</label>
        <input asp-for="Email" class="input" />

        <!-- Password field -->
        <label>Password</label>
        <input asp-for="Password" type="password" class="input" />

        <!-- Submit button -->
        <button class="btn-primary" type="submit">Sign In</button>
    </form>

    <!-- Registration link for users without an account -->
    <p class="small-link">
        Don't have an account?
        <a asp-action="Register">Sign up here</a>
    </p>
</div>
