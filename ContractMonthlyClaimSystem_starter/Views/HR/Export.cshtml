namespace ContractMonthlyClaimSystem.Views.HR
@{
    ViewData["Title"] = "Export Approved Claims";
}

<h2>Export Approved Claims</h2>

<p>Select a date range for approved claims to export. The default range is the last month.</p>

<form asp-controller="HR" asp-action="ExportApprovedClaimsCsv" method="post">
    @Html.AntiForgeryToken()
    <div class="form-row">
        <div class="form-group col-md-3">
            <label for="from">From (inclusive)</label>
            <input class="form-control" type="date" id="from" name="from" />
        </div>
        <div class="form-group col-md-3">
            <label for="to">To (inclusive)</label>
            <input class="form-control" type="date" id="to" name="to" />
        </div>
    </div>

    <button type="submit" class="btn btn-primary">Download CSV</button>
</form>

<hr />

<div>
    <strong>Notes</strong>
    <ul>
        <li>CSV file can be opened in Excel for payment processing.</li>
        <li>If there are attached file names they will appear in the last column separated by " | ".</li>
    </ul>
</div>
